  <form action="http://localhost:3000/login" method="POST" class="container mt-5 pt-3 shadow-lg p-3 mb-5 bg-white rounded" style="width: 35%;">
    <center><h4 class="welcome mt-3">Welcome to Awesome Shop</h4></center>
    <center><div class="txt mt-3">Enter your email address and password to access to continue</div></center>
    <div class="mb-3 mt-3 "  >
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <input type="email" class="form-control " id="exampleInputEmail1" aria-describedby="emailHelp" name="email" >
      <!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> -->
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label" >Password</label>   
      <% if(error) {%>
        <span class="error" ><%= message %></span>
      <% } %>
      <input type="password" class="form-control " id="exampleInputPassword1" name="password">
    </div>

    <button type="submit" class="btn btn-success mb-3 mt-3 ">Log in</button>
    <center class="mb-3"><span class="signup">Don't have an account?</span> <a href="http://localhost:3000/signup">Sign Up</a></center>
    
  </form>


</body>
