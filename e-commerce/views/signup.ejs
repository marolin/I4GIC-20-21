    <form action="http://localhost:3000/register" method="POST" id="formSubmit" onsubmit="validator(event)" class="container mt-3 pt-3 shadow-lg p-3 mb-3 bg-white rounded" style="width: 35%;">
        <center><h4 class="welcome">Welcome to Awesome Shop</h4></center>
        <center class="mt-3"><div class="txt">Don't have an account? Create your own account, it takes less than a minute</div></center>
        
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" name="username" aria-describedby="emailHelp">
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email address</label> <span class="message" id = "message1"></span>
          <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp">
        </div>

        <div class="mb-3">
          <label for="pwsd" class="form-label">Password</label><span class="message" id = "message"></span>
          <input type="password" class="form-control" name="password" id="pwsd">
        </div>

        <div class="mb-3">
            <label for="confirm_password" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" name="confirm_password" id="confirm_password">
        </div>

        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
          <label class="form-check-label" for="exampleCheck1">I accept Terms and Conditions</label>
        </div>
        <button type="submit" id="signup" class="btn btn-success">Sign Up</button>
       
      </form>
      <center class="mb-1 mt-2"><span class="signup">Already have account?</span> <a href="http://localhost:3000/signin">Sign In</a></center>
    
